{
    "name": "auth-system/network-verification",
    "description": "Modern Network License Verification System",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Auth System Team",
            "email": "team@authsystem.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-json": "*",
        "ext-session": "*",
        "ext-mbstring": "*",
        "ext-curl": "*",
        "ext-openssl": "*",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.0",
        "firebase/php-jwt": "^6.8",
        "ramsey/uuid": "^4.7",
        "respect/validation": "^2.2",
        "twig/twig": "^3.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "AuthSystem\\": "src/",
            "AuthSystem\\Tests\\": "tests/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AuthSystem\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "stan": "phpstan analyse src --level=8"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
