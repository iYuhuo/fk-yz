# 应用配置
SYSTEM_NAME="网络验证系统"
WEBSITE_URL=http://localhost
WEBSITE_LOGO=
APP_VERSION="2.0.0"
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=Asia/Shanghai

# 数据库配置
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=auth_system
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# 安全配置
JWT_SECRET=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRY=3600
API_SECRET_KEY=your-api-secret-key-here
API_ENCRYPT_METHOD=AES-256-CBC
CLIENT_AUTH_REQUIRED=true
API_KEY_REQUIRED=false
SESSION_LIFETIME=3600
CSRF_TOKEN_LIFETIME=1800

# 限流配置
RATE_LIMIT_VERIFY_MAX=10
RATE_LIMIT_VERIFY_PER=60
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_LOGIN_PER=60
RATE_LIMIT_API_MAX=100
RATE_LIMIT_API_PER=60

# 许可证配置
LICENSE_PREFIX=zz
LICENSE_LENGTH=18
LICENSE_CHARSET=abcdefghijklmnopqrstuvwxyz0123456789

# 日志配置
LOG_LEVEL=info
LOG_FILE=storage/logs/app.log
LOG_MAX_FILES=30

# 缓存配置
CACHE_DRIVER=file
CACHE_TTL=3600

# 邮件配置（可选）
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="Auth System"

# 文件存储
STORAGE_PATH=storage
UPLOAD_MAX_SIZE=10485760
